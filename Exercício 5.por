programa {
  funcao inicio() {

    //5) Faça um programa que leia as duas notas de um aluno em uma matéria e mostre na tela a sua média na disciplina.//

    real nota1
    real nota2

    escreva ("Nota 1: ")
    leia (nota1)
    escreva ("Nota 2: ")
    leia (nota2)

    escreva ("A media entre ", nota1," e ", nota2," é igual a ", nota1 + nota2, " . ")
    
  }
}
