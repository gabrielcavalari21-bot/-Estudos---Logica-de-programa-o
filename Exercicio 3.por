programa {
  funcao inicio() {


    // 3) Crie um programa que leia o nome e o salário de um funcionário, mostrando no final uma mensagem.//

    cadeia nome, salario

    escreva ("Nome do funcionario: ")
    leia (nome)
    escreva ("Salário: ")
    leia (salario)
    escreva (" O funcionário ", nome, " tem um salário de ", "R$ ", salario, " em Junho")

    
  }
}
