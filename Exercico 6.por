programa {
  funcao inicio() {

   //6) Faça um programa que leia um número inteiro e mostre o seu antecessor e seu sucessor.//



    inteiro apre, n1

     escreva ("Digite um numero: ")
     leia (apre)

     n1 = 1

     escreva ("\n"," O antecessor de ", apre, " é ", apre-n1 )

     escreva ("\n"," O sucessor de ", apre, " é ", apre+1 )

    
  }
}
